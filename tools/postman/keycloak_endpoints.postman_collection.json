									"name": "OAUTH2 Authorization code - Authenticate",
									"event": [
										{
											"listen": "test",
											"script": {
												"exec": [
													"pm.test(\"Status code is 302\", function () {",
													"    pm.response.to.have.status(302);",
													"});",
													"",
													"if(pm.response.status === 'Found') {",
													"    const querystring = require('querystring');",
													"    const urlModule = require('url');",
													"",
													"    const headers = pm.response.headers",
													"",
													"    const locationHeader = headers.get(\"Location\")",
													"",
													"    const mzUrl = urlModule.parse(locationHeader)",
													"    const params = querystring.parse(mzUrl.query)",
													"",
													"    pm.environment.set(\"keycloak_code\", params.code);",
													"    pm.environment.set(\"keycloak_session_state\",params.session_state);",
													"    ",
													"    console.log(\"Done Step 2\");",
													"}"
												],
												"type": "text/javascript"
											}
